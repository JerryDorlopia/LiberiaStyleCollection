Options +FollowSymLinks
RewriteEngine On

# Set default page to login.php
DirectoryIndex login.php

# Remove .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [NC,L]

